set window-title-basename "true"
set selection-clipboard "clipboard"

#
# Recolor mode settings
#

set recolor-lightcolor          "#282c34" # Background
set recolor-darkcolor           "#9ca0a4" # Foreground

#
# Zoom settings
#
set zoom-step 5

#
# Startup options
#
set adjust-open width

#set recolor true

#
# First page column position in two side view
#
set first-page-column 1


#
# Keybindings
#
map <A-Space> zoom best-fit
map <C-z> feedkeys ":exec zath $FILE<Return>quit<Return>"

#map ! feedkeys  ":set recolor-lightcolor \#ffffff<Return>:set recolor-darkcolor \#000000<Return>" # original (black on white) 
#map @ feedkeys  ":set recolor-lightcolor \#282c34<Return>:set recolor-darkcolor \#9ca0a4<Return>" # nord
#map \# feedkeys ":set recolor-lightcolor \#444444<Return>:set recolor-darkcolor \#dcc1a7<Return>" # sepia
#map $ feedkeys  ":set recolor-lightcolor \#002b36<Return>:set recolor-darkcolor \#839496<Return>" # bluish (midnight mode)

# nord        
map <F1> focus_inputbar ":set recolor-lightcolor \#282c34"    
map <F2> focus_inputbar ":set recolor-darkcolor \#9ca0a4"    
map ! feedkeys "<F1><Return><F2><Return>"    

# dark   
map <F3> focus_inputbar ":set recolor-lightcolor \#21222c"    
map <F4> focus_inputbar ":set recolor-darkcolor \#f8f8f2"    
map @ feedkeys "<F3><Return><F4><Return>"    

# midnight mode
map <F6> focus_inputbar ":set recolor-lightcolor \#002b36"    
map <F7> focus_inputbar ":set recolor-darkcolor \#839496"    
map \# feedkeys "<F6><Return><F7><Return>"    

# sepia    
map <F8> focus_inputbar ":set recolor-lightcolor \#dcc1a7"    
map <F9> focus_inputbar ":set recolor-darkcolor \#000000"    
map $ feedkeys "<F8><Return><F9><Return>"  

# original   
map <F10> focus_inputbar ":set recolor-lightcolor \#ffffff"    
map <F12> focus_inputbar ":set recolor-darkcolor \#000000"    
map % feedkeys "<F10><Return><F12><Return>"    


#set guioptions shset guioptions sh
